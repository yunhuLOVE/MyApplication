<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_deep</item>
        <item name="colorAccent">@color/blue_light</item>
    </style>

    <!--菜单按钮容器-->
    <style name="MenuButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <!--菜单按钮容器-->
    <style name="MultiMenuButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <!--菜单图标-->
    <style name="MenuButtonIcon">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <!--手机菜单图标-->
    <style name="PhoneMenuButtonIcon">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <!--菜单文字-->
    <style name="MenuButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--手机菜单文字-->
    <style name="PhoneMenuButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/phone_menu_title</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--更多菜单项-->
    <style name="MoreMenuItem">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@color/white_light</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <!--更多菜单项-->
    <style name="MultiMoreMenuItem">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:background">@color/white_light</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <!--更多菜单图标-->
    <style name="MoreMenuItemIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">false</item>
    </style>

    <!--更多菜单文字-->
    <style name="MoreMenuItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--Button确认，例如登录、保存设置、对话框中确定等-->
    <style name="PlanButton" parent="Widget.AppCompat.Button.Borderless">  <!--无阴影-->
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@drawable/common_sel_btn_text_positive</item>
    </style>

    <!--地图按钮容器-->
    <style name="MapButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/pad_map_sel_btn</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!--手机地图按钮容器-->
    <style name="PhoneMapButton">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/map_sel_btn</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!--地图按钮图标-->
    <style name="MapButtonIcon">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
    </style>

    <!--手机地图按钮图标-->
    <style name="PhoneMapButtonIcon">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!--地图按钮文字-->
    <style name="MapButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white_light</item>
        <item name="android:textSize">11sp</item>
    </style>

    <!--手机地图按钮文字-->
    <style name="PhoneMapButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/phone_menu_title</item>
        <item name="android:textSize">8sp</item>
    </style>

    <!--输入框-->
    <style name="PlanEditText">
        <item name="android:background">@drawable/common_bg_widget</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">@dimen/text_size_third</item>
    </style>

    <!--下拉框，仅用于AMSpinner-->
    <style name="PlanSpinner">
        <item name="spinnerLayout">@layout/plan_spinner_layout</item>
        <item name="itemLayout">@layout/plan_spinner_item_layout</item>
        <item name="windowLayout">@layout/plan_spinner_window_layout</item>
    </style>

    <!--CheckBox-->
    <style name="PlanCheckBox" parent="AGMobile.Widget.CheckBox">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/common_sel_checkbox</item>
    </style>

    <!--冲突检测结果表格表头文字样式-->
    <style name="MultiPlanConflictCheckResultTableTitleTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--冲突检测结果文字样式-->
    <style name="MultiPlanConflictCheckResultTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <!--我的工作右上方按钮-->
    <style name="WorkButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@drawable/work_sel_btn</item>
        <item name="android:textColor">@color/white_light</item>
    </style>

    <!--暗底色上的SegmentControlView，选中项为白色-->
    <style name="SegmentControlView">
        <item name="scv_BackgroundSelectedColor">@color/agmobile_blue</item>
        <item name="scv_BackgroundNormalColor">@color/agmobile_white</item>
        <item name="scv_TextSelectedColor">@color/agmobile_white</item>
        <item name="scv_TextNormalColor">@color/agmobile_blue</item>
        <item name="scv_FrameColor">@color/agmobile_blue</item>
    </style>

    <!--冲突检测进度条样式-->
    <style name="ConflictCheck_ProgressBar" parent="NumberProgressBar_Default">
        <item name="progress_unreached_color">#FFFFFF</item>
        <item name="progress_reached_color">#3498DB</item>
        <item name="progress_text_size">12sp</item>
        <item name="progress_text_color">#FFFFFF</item>
    </style>
</resources>
