<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <!--顶栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:background="@color/multiplan_primary_color"
        android:orientation="vertical">

        <!--返回按钮-->
        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="@dimen/min_touchable_size"
            android:layout_height="@dimen/min_touchable_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/top_icon_margin_horizontal"
            android:background="@drawable/common_sel_btn_dark"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="@dimen/top_icon_size"
                android:layout_height="@dimen/top_icon_size"
                android:background="@null"
                android:clickable="false"
                android:scaleType="fitCenter"
                android:src="@mipmap/common_ic_back" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_bar_height"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/statistic_result"
            android:textColor="@color/agmobile_white"
            android:textSize="@dimen/text_size_first" />

    </RelativeLayout>

    <!--tab layout-->
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stats_tab_height"
        android:background="@color/agmobile_white"
        app:tabIndicatorColor="@color/agmobile_blue"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/agmobile_blue">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="饼状图"/>

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="折线图"/>

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="柱状图"/>

    </android.support.design.widget.TabLayout>


    <LinearLayout
        android:id="@+id/stats_chart_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/agmobile_white_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <com.augurit.am.cmpt.widget.echart.PieEChart
                android:id="@+id/stats_piechart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stats_chart_height"
                android:background="@color/agmobile_white"
                android:visibility="visible">
            </com.augurit.am.cmpt.widget.echart.PieEChart>

            <com.augurit.am.cmpt.widget.echart.LineEChart
                android:id="@+id/stats_linechart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stats_chart_height"
                android:background="@color/agmobile_white"
                android:visibility="invisible">
            </com.augurit.am.cmpt.widget.echart.LineEChart>

            <com.augurit.am.cmpt.widget.echart.BarEChart
                android:id="@+id/stats_barchart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stats_chart_height"
                android:background="@color/agmobile_white"
                android:visibility="invisible">
            </com.augurit.am.cmpt.widget.echart.BarEChart>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@color/agmobile_white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_get_queryable_layer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/part_title_margin_horizontal"
                    android:padding="@dimen/part_title_padding"
                    android:textColor="@color/agmobile_blue"
                    android:textSize="@dimen/text_size_second"
                    android:text="@string/statistic_result" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/part_title_underline_height"
                    android:layout_alignLeft="@id/tv_get_queryable_layer_title"
                    android:layout_alignRight="@id/tv_get_queryable_layer_title"
                    android:layout_alignParentBottom="true"
                    android:background="@color/agmobile_blue"/>
            </RelativeLayout>

            <!--表头-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:paddingLeft="@dimen/list_spacing_horizontal"
                android:paddingRight="@dimen/list_spacing_horizontal"
                android:background="@color/agmobile_white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_second"
                    android:textColor="@color/agmobile_black"
                    android:text="分组字段"/>

                <TextView
                    android:id="@+id/stats_units"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_second"
                    android:textColor="@color/agmobile_black"
                    android:text="结果"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_divider"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_stats_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@color/agmobile_white"
                android:visibility="visible">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_alignParentTop="true"
            android:background="@mipmap/stats_shadow" />
    </LinearLayout>

</LinearLayout>