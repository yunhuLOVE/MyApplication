<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_processed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/work_bg_info_processed"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:lineSpacingMultiplier="0.9"
            android:textColor="@color/blue_deep"
            android:textSize="@dimen/text_size_third"
            android:text="已\n完\n成"
            android:visibility="gone"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/tv_pending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/work_bg_info_pending"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:lineSpacingMultiplier="0.9"
            android:textColor="#32b06c"
            android:textSize="@dimen/text_size_third"
            android:text="待\n处\n理"
            android:visibility="gone"
            tools:visibility="visible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="36dp"
            android:textColor="@color/attribute_color"
            android:gravity="center_vertical|left"
            android:text="环节名称"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_assignee_name"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="36dp"
            android:textColor="@color/attribute_color"
            android:gravity="center_vertical|left"
            android:text="受理单位"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sign_time"
            android:layout_width="wrap_content"
            android:paddingLeft="10dp"
            android:layout_height="36dp"
            android:textColor="@color/attribute_color"
            android:gravity="center_vertical|left"
            android:text="标记时间"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="36dp"
            android:paddingLeft="10dp"
            android:textColor="@color/attribute_color"
            android:gravity="center_vertical|left"
            android:text="受理意见"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>