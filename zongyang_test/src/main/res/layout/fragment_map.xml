<?xml version="1.0" encoding="utf-8"?>
<com.augurit.agmobile.agmultiplan.common.DefaultMapContainer xmlns:android="http://schemas.android.com/apk/res/android"
                                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                                             xmlns:tools="http://schemas.android.com/tools"
                                                             android:layout_width="match_parent"
                                                             android:layout_height="match_parent"
                                                             app:mapView="@+id/map_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--内容-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--MapView-->
            <com.esri.android.map.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:alpha="@string/alpha"
                android:background="@android:color/transparent">

                <!--
                <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                                        android:id="@+id/drawer_layout"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                         android:layout_alignParentTop="true"
                                                        android:background="@android:color/holo_red_light"
                                                            android:layout_marginTop="10dp"
                                                        android:fitsSystemWindows="true"> -->

                <FrameLayout
                    android:id="@+id/fragment_container"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"/>

                <!--
                <android.support.design.widget.NavigationView
                    android:id="@+id/nav_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="false"
                    app:menu="@menu/menu_app"/>

                    -->
                <!--
            </android.support.v4.widget.DrawerLayout> -->

            </RelativeLayout>
            <include
                android:id="@+id/rv_menu"
                layout="@layout/action_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/rl_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:clickable="true">

                <!--
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                                    android:id="@+id/cv_menu_main"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:alpha="@string/alpha"
                                                    android:clickable="true"
                                                    card_view:cardUseCompatPadding="true"> -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/phone_menu_bg"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/btn_1"
                        style="@style/MenuButton">

                        <ImageView
                            style="@style/PhoneMenuButtonIcon"
                            android:src="@drawable/phone_menu_ic_userinfo"/>

                        <TextView
                            style="@style/PhoneMenuButtonText"
                            android:text="个人资料"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_2"
                        style="@style/MenuButton">

                        <ImageView
                            style="@style/PhoneMenuButtonIcon"
                            android:src="@drawable/phone_menu_ic_mywork"/>

                        <TextView
                            style="@style/PhoneMenuButtonText"
                            android:text="我的工作"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_3"
                        style="@style/MenuButton">

                        <ImageView
                            style="@style/PhoneMenuButtonIcon"
                            android:src="@drawable/phone_menu_ic_program"/>

                        <TextView
                            style="@style/PhoneMenuButtonText"
                            android:text="项目查询"/>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/btn_4"
                        style="@style/MenuButton">

                        <ImageView
                            style="@style/PhoneMenuButtonIcon"
                            android:src="@drawable/phone_menu_ic_auxiliary"/>

                        <TextView
                            style="@style/PhoneMenuButtonText"
                            android:text="辅助选址"/>
                    </LinearLayout>

                    <!--xcl 2017-05-17 去掉图层管理按钮-->
                    <!--
                    <LinearLayout
                        android:id="@+id/btn_5"
                        style="@style/MenuButton">

                        <ImageView
                            style="@style/MenuButtonIcon"
                            android:src="@drawable/menu_ic_layer"/>

                        <TextView
                            style="@style/MenuButtonText"
                            android:text="图层管理"/>
                    </LinearLayout>
                    -->

                    <LinearLayout
                        android:id="@+id/btn_6"
                        style="@style/MenuButton"
                        android:layout_height="match_parent"
                        android:layout_weight="3">

                        <ImageView
                            android:id="@+id/iv_main_more"
                            style="@style/MenuButtonIcon"
                            android:src="@drawable/ic_more_horiz_blue_24dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!--
                </android.support.v7.widget.CardView>
                -->
            </RelativeLayout>

            <!--更多菜单Popup锚点-->
            <View
                android:id="@+id/view_popup_anchor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignTop="@id/rl_middle"
                android:layout_toRightOf="@id/rl_middle"/>


            <!--
            <LinearLayout
                android:id="@+id/ll_change_menu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="86dp"
                android:layout_toRightOf="@id/rl_middle"
                android:alpha="@string/alpha"
                android:background="@android:color/holo_orange_light"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/btn_change_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/down_arrow" />
            </LinearLayout>
            -->

            <LinearLayout
                android:id="@+id/ll_above_toolbox_container"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:clickable="true"
                android:orientation="vertical"
                android:visibility="gone"/>

            <!--    <LinearLayout
                    android:id="@+id/ll_toolbox_container"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="85dp"
                    android:layout_toRightOf="@id/rl_head"
                    android:orientation="vertical"/>-->

            <LinearLayout
                android:id="@+id/top_bar_container"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="75dp"
                android:orientation="vertical"
                />

            <LinearLayout
                android:id="@+id/ll_right_tool_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/map_btn_margin_horizontal"
                android:layout_marginTop="75dp"
                android:orientation="vertical"/>
        </RelativeLayout>


        <!--地图右侧容器-->
        <include
            android:id="@+id/action_right"
            layout="@layout/action_right"
            android:layout_width="@dimen/map_btn_size"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/map_btn_margin_horizontal"
            android:layout_marginTop="@dimen/top_bar_height"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="85dp"
            android:alpha="@string/alpha"
            android:orientation="vertical">

            <!--图层管理按钮-->
            <include
                layout="@layout/include_layer_manage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/map_btn_margin_horizontal"
                />

            <!--测量按钮-->
            <LinearLayout
                android:id="@+id/ll_measure_btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/map_btn_margin_horizontal"
                android:orientation="vertical"
                android:layout_marginBottom="5dp">


                <LinearLayout
                    android:id="@+id/btn_project"
                    style="@style/PhoneMapButton">

                    <ImageView
                        style="@style/PhoneMapButtonIcon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/phone_menu_ic_project"/>

                    <TextView
                        style="@style/PhoneMapButtonText"
                        android:text="专题"/>
                </LinearLayout>
            </LinearLayout>
            <!--添加书签按钮-->
            <LinearLayout
                android:id="@+id/ll_addbookmark_btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/map_btn_margin_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_bookmark"
                    style="@style/PhoneMapButton"
                    android:scaleType="fitCenter">

                    <ImageView
                        style="@style/PhoneMapButtonIcon"
                        android:src="@drawable/phone_map_ic_bookmark"/>

                    <TextView
                        style="@style/PhoneMapButtonText"
                        android:text="书签"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--全图、定位按钮-->
        <LinearLayout
            android:id="@+id/ll_right_btn_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="@dimen/map_btn_margin_horizontal"
            android:alpha="@string/alpha"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/btn_global"
                style="@style/PhoneMapButton"
                android:layout_marginBottom="5dp"
                android:scaleType="fitCenter">

                <ImageView
                    style="@style/PhoneMapButtonIcon"
                    android:src="@drawable/phone_map_ic_global"/>

                <TextView
                    style="@style/PhoneMapButtonText"
                    android:text="全图"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_location"
                style="@style/PhoneMapButton"
                android:scaleType="fitCenter"
                >

                <ImageView
                    style="@style/PhoneMapButtonIcon"
                    android:src="@drawable/phone_map_ic_location"/>

                <TextView
                    style="@style/PhoneMapButtonText"
                    android:text="位置"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_compass"
                style="@style/PhoneMapButton"
                android:scaleType="fitCenter"
                android:visibility="gone"
                >

                <ImageView
                    style="@style/PhoneMapButtonIcon"
                    android:src="@drawable/phone_map_ic_location"/>

                <TextView
                    style="@style/PhoneMapButtonText"
                    android:text="位置"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_zoomcenter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/map_btn_size"
                android:checked="false"
                android:visibility="invisible"/>
        </LinearLayout>

        <!--查看图例-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="110dp"
            android:layout_marginRight="@dimen/map_btn_margin_horizontal"
            android:alpha="@string/alpha"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_showlegend"
                style="@style/PhoneMapButton"
                android:scaleType="fitCenter">

                <ImageView
                    style="@style/PhoneMapButtonIcon"
                    android:src="@drawable/phone_ic_legend"/>

                <TextView
                    style="@style/PhoneMapButtonText"
                    android:text="图例"/>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="@dimen/map_btn_margin_horizontal"
            android:alpha="@string/alpha"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_measure"
                style="@style/PhoneMapButton"
                android:scaleType="fitCenter">

                <ImageView
                    style="@style/PhoneMapButtonIcon"
                    android:src="@drawable/phone_map_ic_measure"/>

                <TextView
                    style="@style/PhoneMapButtonText"
                    android:text="测量"/>
            </LinearLayout>
        </LinearLayout>

        <!-- <LinearLayout
             android:id="@+id/ll_tool_container"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/rl_head"
             android:orientation="vertical"/>-->
    </RelativeLayout>
    <!--BottomSheet-->

    <include
        layout="@layout/action_menu_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rv_menu"
        android:fitsSystemWindows="false"
        />
   <!-- &lt;!&ndash; 平板用于摆放点查候选列表和更多属性&ndash;&gt;
    <FrameLayout
            android:id="@+id/identify_info_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="@string/alpha"
            android:background="#ffffff"
            android:clickable="true"
            android:focusable="false"
            android:orientation="vertical"
            android:visibility="gone">&lt;!&ndash;clickable="true"是为了防止点击击穿地图 &ndash;&gt;
            &lt;!&ndash; <include layout="@layout/cadidate_container"/>&ndash;&gt;
    </FrameLayout>-->
    <include
        android:id="@+id/identify_info_container"
        layout="@layout/identify_info_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:fitsSystemWindows="false"/>
</com.augurit.agmobile.agmultiplan.common.DefaultMapContainer>