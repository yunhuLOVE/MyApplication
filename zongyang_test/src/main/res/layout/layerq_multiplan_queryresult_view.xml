<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/agmobile_white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@color/agmobile_white_dark"
        android:stateListAnimator="@drawable/layerq_sel_listtile">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center">

            <ImageView
                style="@style/AGMobile.Widget.ImageView.BottomToggle"
                android:layout_marginBottom="@dimen/bottom_toggle_margin_vertical"/>

            <TextView
                android:id="@+id/tv_layerquery_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/agmobile_blue"
                android:textSize="@dimen/text_size_second"
                android:text="@string/query_result"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_close"
            android:layout_width="@dimen/min_touchable_size"
            android:layout_height="@dimen/min_touchable_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/common_sel_btn_light"
            android:orientation="vertical"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/top_icon_size"
                android:layout_height="@dimen/top_icon_size"
                android:scaleType="fitCenter"
                android:src="@mipmap/common_ic_close_gray"/>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/agmobile_white">
        <ProgressBar
            android:id="@+id/pb_layerq_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
        <ViewStub
            android:id="@+id/stub_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/view_listcallout_emptyresult"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_layerquery_result_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size_second"
            android:text="@string/layer_search_no_data"
            android:visibility="gone"/>
        <ViewStub
            android:id="@+id/stub_load_fail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout="@layout/common_loading_fail_view"
            android:visibility="gone"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_layerquery_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>
