<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/agmobile_white_dark"
    >
    <!--   android:stateListAnimator="@drawable/layerq_listitem_raise"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:orientation="horizontal" >

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_simple_layerquery_number"
            android:layout_width="@dimen/bottomsheet_item_left_imageview_size"
            android:layout_height="@dimen/bottomsheet_item_left_imageview_size"
            android:gravity="center"
            android:layout_marginLeft="@dimen/bottomsheet_item_margin_left"
            android:contentDescription="@string/app_name"
            android:textColor="@color/agmobile_black"
            android:textSize="@dimen/text_size_second"
            android:text="1"/>
        <ImageView
            android:layout_marginLeft="@dimen/bottomsheet_item_margin_left"
            android:layout_width="@dimen/bottomsheet_close_icon_size"
            android:layout_height="@dimen/bottomsheet_close_icon_size"
            android:src="@mipmap/layerq_result_icon"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_simple_layerquery_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/agmobile_black"
            android:text="taobao"
            android:textSize="@dimen/text_size_second"/>
    </LinearLayout>
</LinearLayout>
