<?xml version="1.0" encoding="utf-8"?>
<com.augurit.am.cmpt.widget.loadinglayout.ProgressLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_layerq_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/agmobile_white_dark"
    android:orientation="vertical">

    <include
        layout="@layout/common_action_container_title"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/conflict_check_default_padding">
        <!--下拉框 -->
        <TextView
            android:id="@+id/tv_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="城规图层："
            />

        <com.augurit.am.cmpt.widget.spinner.AMSpinner
            android:id="@+id/spinner_conflictcheck_city_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_"/>

        <!--  <Spinner
              android:id="@+id/spinner_search_layer"
              style="@style/spinner_style"
              android:layout_toRightOf="@id/tv_"
              android:paddingLeft="2dp">
          </Spinner>-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/conflict_check_default_padding">
        <!--下拉框 -->
        <TextView
            android:id="@+id/tv_search_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="土规图层："
            />

        <com.augurit.am.cmpt.widget.spinner.AMSpinner
            android:id="@+id/spinner_conflictcheck_land_layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_search_field"/>
        <!--<Spinner
            android:id="@+id/spinner_search_field"
            style="@style/spinner_style"
            android:layout_toRightOf="@id/tv_search_field"
            android:paddingLeft="2dp">
        </Spinner>-->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/conflict_check_default_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="统计级别："/>

        <RadioGroup
            android:id="@+id/rg_choose_area_way"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contentDescription="统计级别"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_choose_area_external"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:checked="true"
                android:text="外部导入"/>

            <RadioButton
                android:id="@+id/rb_choose_area_byhand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="24dp"
                android:text="手动绘制"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_imported_shapefile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/file_iv"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_shp"
            />

        <TextView
            android:id="@+id/file_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/file_iv"
            android:layout_toLeftOf="@+id/checkbox"
            android:layout_toRightOf="@+id/file_iv"
            android:layout_toStartOf="@+id/checkbox"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="5dp"
            android:text="PPDF_112121.pdf"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_conflict_check_import_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/conflict_check_default_padding"
            >

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/common_ic_import_normal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="导入文件"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_conflict_check_choose_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:padding="@dimen/conflict_check_default_padding"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_rectange"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/common_ic_rectangle_normal"/>

        <ImageView
            android:id="@+id/iv_circle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:src="@mipmap/common_ic_circle_normal"/>

        <ImageView
            android:id="@+id/iv_polygon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/common_ic_polygon_normal"/>
    </LinearLayout>
    <!--查询按钮-->
    <Button
        android:id="@+id/btn_conflict_start"
        style="@style/AGMobile.Widget.Button.Function"
        android:layout_alignParentBottom="true"
        android:text="开始分析"/>

</com.augurit.am.cmpt.widget.loadinglayout.ProgressLinearLayout>