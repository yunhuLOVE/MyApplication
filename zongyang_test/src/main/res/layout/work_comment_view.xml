<?xml version="1.0" encoding="utf-8"?>
<!--意见提交-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/agmobile_white_dark"
              android:clickable="true"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/blue_deep">

        <LinearLayout
            android:id="@+id/btn_back"
            style="@style/AGMobile.Widget.Button.Container.Light"
            android:layout_width="@dimen/top_bar_height"
            android:layout_height="@dimen/top_bar_height"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                style="@style/AGMobile.Widget.ImageButton.TopBar"
                android:src="@mipmap/common_ic_back"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="填写意见"
            android:textColor="@color/white_light"
            android:textSize="@dimen/text_size_second"/>

        <View
            style="@style/AGMobile.Widget.View.DividerVertical"
            android:background="@color/white_deep"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/btn_send"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="@style/AGMobile.Widget.Button.Container.Dark">

            <TextView
                style="@style/WorkButton"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:text="提交"/>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--意见填写-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/agmobile_white">

            <EditText
                android:id="@+id/edt_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/btn_save"
                android:background="@color/agmobile_white"
                android:gravity="top|left"
                android:hint="请填写意见"
                android:padding="8dp"/>

            <LinearLayout
                android:id="@+id/btn_saved_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/common_sel_btn_light"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="常用意见"
                    android:textColor="@color/blue_light"
                    android:textSize="@dimen/text_size_second"/>

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/spinner_ic_down_arrow"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_save_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_sel_btn_light"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="4dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/common_ic_save"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保存到常用意见"
                    android:textColor="@color/blue_light"
                    android:textSize="@dimen/text_size_second"/>
            </LinearLayout>

            <View
                style="@style/AGMobile.Widget.View.DividerHorizontal"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="10"
            android:background="@color/agmobile_white"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="下一环节及参与者"
                android:textColor="@color/agmobile_black"
                android:textSize="@dimen/text_size_second"
                android:textStyle="bold"/>

            <!--办理结果-->
            <com.augurit.am.cmpt.widget.spinner.AMSpinner
                android:id="@+id/sp_process_result"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                style="@style/PlanSpinner">

            </com.augurit.am.cmpt.widget.spinner.AMSpinner>

            <!--下一环节选项-->
            <com.augurit.am.cmpt.widget.spinner.AMSpinner
                android:id="@+id/sp_next"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                style="@style/PlanSpinner">

            </com.augurit.am.cmpt.widget.spinner.AMSpinner>

            <View
                style="@style/AGMobile.Widget.View.DividerHorizontal"/>

            <!--参与者-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_roles"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>