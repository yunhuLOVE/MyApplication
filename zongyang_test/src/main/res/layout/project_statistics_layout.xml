<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_title_height"
            android:background="@color/blue"
            android:visibility="gone">

            <!--返回按钮-->
            <LinearLayout
                android:id="@+id/btn_back"
                android:layout_width="@dimen/min_touchable_size"
                android:layout_height="@dimen/min_touchable_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/top_icon_margin_horizontal"
                android:background="@drawable/common_sel_btn_dark"
                android:clickable="true"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:visibility="gone">
                <ImageView
                    android:id="@+id/iv_stats_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/common_ic_back_blue"
                    android:layout_marginLeft="16dp"
                    android:layout_centerVertical="true"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:gravity="center">

                <ImageView
                    android:visibility="gone"
                    style="@style/AGMobile.Widget.ImageView.BottomToggle"
                    android:layout_marginBottom="@dimen/bottom_toggle_margin_vertical"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/agmobile_white"
                    android:textSize="@dimen/text_size_first"
                    android:text="@string/action_project_statistics"/>
            </LinearLayout>

            <View  android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/agmobile_grey_0"
                android:layout_alignParentBottom="true"/>

            <LinearLayout
                android:id="@+id/btn_close"
                android:layout_width="@dimen/min_touchable_size"
                android:layout_height="@dimen/min_touchable_size"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/common_sel_btn_light"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/top_icon_size"
                    android:layout_height="@dimen/top_icon_size"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/common_ic_close_gray"/>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="统计方式：" />

            <RadioGroup
                android:id="@+id/rg_statistics_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="统计方式"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_statistics_type_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:checked="true"
                    android:text="空间统计" />

                <RadioButton
                    android:id="@+id/rb_statistics_type_attr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="属性统计" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="统计对象：" />

            <com.augurit.am.cmpt.widget.spinner.AMSpinner
                android:id="@+id/spinner_statistics_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlanSpinner"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="统计级别：" />

            <RadioGroup
                android:id="@+id/rg_statistics_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="统计级别"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_statistics_area_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:checked="true"
                    android:text="全市" />

                <RadioButton
                    android:id="@+id/rb_statistics_area_district"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="24dp"
                    android:text="区县" />

                <RadioButton
                    android:id="@+id/rb_statistics_area_town"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="街镇" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_statistics_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="统计区县：" />

            <com.augurit.am.cmpt.widget.spinner.AMSpinner
                android:id="@+id/spinner_statistics_district"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlanSpinner"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_statistics_town"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="统计街镇：" />

            <com.augurit.am.cmpt.widget.spinner.AMSpinner
                android:id="@+id/spinner_statistics_town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/PlanSpinner"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                style="@style/PlanButton"
                android:text="统计" />

            <Button
                android:id="@+id/btn_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                style="@style/PlanButton"
                android:text="清除"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>