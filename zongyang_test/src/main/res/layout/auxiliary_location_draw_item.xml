<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="4"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/ib_draw_point"
        android:layout_gravity="center_vertical"
        android:layout_width="32dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:layout_height="32dp"
        android:src="@mipmap/common_ic_point_normal"
        />

    <ImageView
        android:id="@+id/ib_draw_env"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/common_ic_rectangle_normal" />
    <ImageView
        android:id="@+id/ib_draw_polygon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:src="@mipmap/common_ic_polygon_normal" />

    <EditText
        android:id="@+id/edt_distance"
        android:layout_width="0dp"
        android:layout_weight="3.7"
        android:layout_height="36dp"
        android:layout_margin="5dp"
        android:inputType="numberDecimal"
        android:hint="请输入缓冲距离(m)"
        android:textSize="@dimen/text_size_third"
        style="@style/PlanEditText"/>
</LinearLayout>