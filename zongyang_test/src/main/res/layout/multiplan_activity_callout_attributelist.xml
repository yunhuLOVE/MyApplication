<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/multiplan_primary_color"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--关闭按钮-->
        <LinearLayout
            android:id="@+id/btn_close"
            android:layout_width="@dimen/min_touchable_size"
            android:layout_height="@dimen/min_touchable_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/list_symbol_margin_right"
            android:layout_marginTop="5dp"
            android:background="@drawable/common_sel_btn_light"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/top_icon_size"
                android:layout_height="@dimen/top_icon_size"
                android:scaleType="fitCenter"
                android:src="@mipmap/common_ic_close_white"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_close">

            <TextView
                android:id="@+id/tv_title"
                style="@style/AGMobile.Widget.TextView.TopBarTitle"
                android:gravity="center"
                android:text="我是标题"
                android:textColor="@color/agmobile_white"
                />

            <LinearLayout
                android:id="@+id/iv_attributelist_back"
                style="@style/AGMobile.Widget.Button.Container.Dark"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/top_icon_margin_horizontal"
                android:orientation="horizontal">

                <ImageView
                    style="@style/AGMobile.Widget.ImageButton.TopBar"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dp"
                    android:src="@mipmap/left_back_arrow"/>
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_listcallout_attributelist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
</LinearLayout>