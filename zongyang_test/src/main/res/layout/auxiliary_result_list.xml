<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:background="@color/multiplan_primary_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title"
            style="@style/AGMobile.Widget.TextView.TopBarTitle"
            android:text="辅助选址结果"
            android:textColor="@color/agmobile_white"/>

        <LinearLayout
            android:id="@+id/iv_attributelist_back"
            style="@style/AGMobile.Widget.Button.Container.Dark"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/top_icon_margin_horizontal"
            android:orientation="horizontal">

            <ImageView
                style="@style/AGMobile.Widget.ImageButton.TopBar"
                android:src="@mipmap/common_ic_back"/>
        </LinearLayout>
        <!--<ImageView
            android:id="@+id/iv_attributelist_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/common_ic_back" />-->
        <!--关闭按钮-->
        <LinearLayout
            android:id="@+id/btn_close"
            android:layout_width="@dimen/min_touchable_size"
            android:layout_height="@dimen/min_touchable_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/list_symbol_margin_right"
            android:background="@drawable/common_sel_btn_light"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="@dimen/top_icon_size"
                android:layout_height="@dimen/top_icon_size"
                android:scaleType="fitCenter"
                android:src="@mipmap/common_ic_close_white"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/auxiliary_rl_blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/sit_select_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxEms="8"
            android:ellipsize="end"
            android:layout_margin="2dp"
            android:text="选址蓝线"/>

        <SeekBar
            android:id="@+id/sb_auxiliary_blue"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="100"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_blue_alpha_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sb_auxiliary_blue"
            android:text="透明度:0%"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/ib_auxiliary_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/auxiliary_alpha"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/auxiliary_rl_land"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/land_use_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxEms="8"
            android:ellipsize="end"
            android:text="用地蓝线"/>

        <SeekBar
            android:id="@+id/sb_auxiliary_blue_use"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:max="100"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_use_alpha_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/sb_auxiliary_blue_use"
            android:text="透明度:0%"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/ib_auxiliary_blue_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/auxiliary_alpha"/>
    </RelativeLayout>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4.5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="序号"
            android:textSize="12sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="地块编码"
            android:textSize="12sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="用地性质"
            android:textSize="12sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="地块面积(m²)"
            android:textSize="12sp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="建筑面积(m²)"
            android:textSize="12sp"/>
    </LinearLayout>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.augurit.am.cmpt.widget.loadinglayout.ProgressLinearLayout
        android:id="@+id/progressLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/agmobile_white">

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/rv_listcallout_attributelist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </com.jcodecraeer.xrecyclerview.XRecyclerView>

    </com.augurit.am.cmpt.widget.loadinglayout.ProgressLinearLayout>

        <TextView
            android:id="@+id/no_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/agmobile_white"
            android:gravity="center"
            android:visibility="gone"
            android:text="无数据"/>
    </RelativeLayout>

</LinearLayout>