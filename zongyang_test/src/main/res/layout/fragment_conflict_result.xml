<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/both_for_build_use_area_color"
            android:clickable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="两规均为建设用地"/>

            <TextView
                android:id="@+id/tv_both_for_build_use_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="两规均为建设用地"
                android:textColor="@color/both_for_build_use_area_color"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        >

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/both_not_for_build_use_area_color"
            android:clickable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="两规均为非建设用地"/>

            <TextView
                android:id="@+id/tv_not_both_for_build_use_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="两规均为建设用地"
                android:textColor="@color/both_not_for_build_use_area_color"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/land_build_use_area_color"
            android:clickable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="土规建设用地、城规非建设用地"/>

            <TextView
                android:id="@+id/tv_land_build_use_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="两规均为建设用地"
                android:textColor="@color/land_build_use_area_color"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/city_build_use_area_color"
            android:clickable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="土规非建设用地、城规建设用地"/>

            <TextView
                android:id="@+id/tv_city_build_use_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="两规均为建设用地"
                android:textColor="@color/city_build_use_area_color"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="名称"
            android:textStyle="bold"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="面积（平方米）"
            android:textStyle="bold"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

    </LinearLayout>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal"/>

    <LinearLayout
        android:id="@+id/ll_both_for_build_use"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="两规均为建设用地"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

        <TextView
            android:id="@+id/tv_bothForBuildUse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="0"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

    </LinearLayout>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal"/>

    <LinearLayout
        android:id="@+id/ll_both_not_for_build_use"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="两规均为非建设用地"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

        <TextView
            android:id="@+id/tv_bothNotForBuildUse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="0"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

    </LinearLayout>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal"/>

    <LinearLayout
        android:id="@+id/ll_land_build_use"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="土规建设用地，城规非建设用地"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

        <TextView
            android:id="@+id/tv_landBuildUse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="0"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

    </LinearLayout>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal"/>

    <LinearLayout
        android:id="@+id/ll_city_build_use"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:clickable="true"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="土规非建设用地，城规建设用地"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

        <TextView
            android:id="@+id/tv_cityBuildUse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="0"/>

        <View style="@style/AGMobile.Widget.View.DividerVertical"/>

    </LinearLayout>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal"/>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal"/>
</LinearLayout>