<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="4"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_height="36dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text="统计级别："/>
        <RadioGroup
            android:id="@+id/rg_region_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/rb_all_city"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/agmobile_blue"
                android:layout_weight="1"
                android:checked="true"
                android:text="全市" />

            <RadioButton
                android:id="@+id/rb_all_region"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/agmobile_blue"
                android:layout_weight="1"
                android:text="区县" />

            <RadioButton
                android:id="@+id/rb_all_town"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/agmobile_blue"
                android:text="街镇" />

            <RadioButton
                android:id="@+id/rb_all_village"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/agmobile_blue"
                android:text="村居" />
        </RadioGroup>
    </LinearLayout>



    <View style="@style/AGMobile.Widget.View.DividerHorizontal" />

    <com.augurit.am.cmpt.widget.spinner.AMSpinner
        android:id="@+id/sp_regon"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/PlanSpinner"/>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal" />

    <com.augurit.am.cmpt.widget.spinner.AMSpinner
        android:id="@+id/sp_town"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/PlanSpinner"/>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal" />

    <com.augurit.am.cmpt.widget.spinner.AMSpinner
        android:id="@+id/sp_village"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/PlanSpinner"/>

    <View style="@style/AGMobile.Widget.View.DividerHorizontal" />

</LinearLayout>