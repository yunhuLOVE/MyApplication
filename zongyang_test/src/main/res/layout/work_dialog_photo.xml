<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/common_lyrl_dialog">

        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/common_sel_recycleritem"
            android:clickable="true"
            android:gravity="center"
            android:textSize="@dimen/text_size_second"
            android:textColor="@color/black"
            android:text="拍照"/>

        <View
            style="@style/AGMobile.Widget.View.DividerHorizontal"/>

        <TextView
            android:id="@+id/tv_library"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/common_sel_recycleritem"
            android:clickable="true"
            android:gravity="center"
            android:textSize="@dimen/text_size_second"
            android:textColor="@color/black"
            android:text="相册"/>

        <View
            style="@style/AGMobile.Widget.View.DividerHorizontal"/>

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/common_sel_recycleritem"
            android:clickable="true"
            android:gravity="center"
            android:textSize="@dimen/text_size_second"
            android:textColor="@color/black"
            android:text="取消"/>

    </LinearLayout>
</LinearLayout>