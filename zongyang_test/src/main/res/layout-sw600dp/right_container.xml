<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_shortcut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/agmobile_blue"
        android:orientation="horizontal">

        <!--关闭按钮-->
        <LinearLayout
            android:id="@+id/iv_show_identify_container"
            android:layout_width="@dimen/min_touchable_size"
            android:layout_height="@dimen/min_touchable_size"
            android:layout_marginLeft="8dp"
            android:background="@drawable/common_sel_btn_light"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/top_icon_size"
                android:layout_height="@dimen/top_icon_size"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_drop_down_white"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_shortcut_title"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="标题"
            android:textColor="@android:color/white"/>
        <!--关闭按钮-->
        <LinearLayout
            android:id="@+id/iv_right_container_close"
            android:layout_width="@dimen/min_touchable_size"
            android:layout_height="@dimen/min_touchable_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/list_symbol_margin_right"
            android:layout_marginTop="5dp"
            android:background="@drawable/common_sel_btn_light"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ImageView
                android:layout_width="@dimen/top_icon_size"
                android:layout_height="@dimen/top_icon_size"
                android:scaleType="fitCenter"
                android:src="@mipmap/common_ic_close_white"/>
        </LinearLayout>

    </LinearLayout>
    <!-- 平板用于摆放点查候选列表和更多属性-->
    <FrameLayout
        android:id="@+id/identify_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/agmobile_white_dark"
        android:orientation="vertical">

        <include layout="@layout/cadidate_container"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/child_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/agmobile_white_dark"
        android:orientation="vertical">
    </FrameLayout>

    <!--关闭按钮-->
    <LinearLayout
        android:id="@+id/iv_hide_identify_container"
        android:layout_width="@dimen/min_touchable_size"
        android:layout_height="@dimen/min_touchable_size"
        android:layout_marginLeft="8dp"
        android:background="@drawable/common_sel_btn_light"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="@dimen/top_icon_size"
            android:layout_height="@dimen/top_icon_size"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_drop_up_white"/>
    </LinearLayout>
    <!--<ImageView
        android:id="@+id/iv_hide_identify_container"
        android:layout_width="@dimen/hide_or_show_identify_container_button_size"
        android:layout_height="@dimen/hide_or_show_identify_container_button_size"
        android:src="@drawable/ic_arrow_drop_up_white"
        />-->

</RelativeLayout>