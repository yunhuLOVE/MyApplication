        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <com.augurit.am.cmpt.widget.echart.PieEChart
                android:id="@+id/stats_piechart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stats_chart_height"
                android:background="@color/agmobile_white"
                android:visibility="visible">
            </com.augurit.am.cmpt.widget.echart.PieEChart>

            <com.augurit.am.cmpt.widget.echart.LineEChart
                android:id="@+id/stats_linechart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stats_chart_height"
                android:background="@color/agmobile_white"
                android:visibility="invisible">
            </com.augurit.am.cmpt.widget.echart.LineEChart>

            <com.augurit.am.cmpt.widget.echart.BarEChart
                android:id="@+id/stats_barchart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/stats_chart_height"
                android:background="@color/agmobile_white"
                android:visibility="invisible">
            </com.augurit.am.cmpt.widget.echart.BarEChart>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:background="@color/agmobile_white"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_get_queryable_layer_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/part_title_margin_horizontal"
                    android:padding="@dimen/part_title_padding"
                    android:textColor="@color/agmobile_black"
                    android:textSize="@dimen/text_size_second"
                    android:text="@string/statistic_result" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/list_divider"
                    android:layout_alignParentBottom="true" />
            </RelativeLayout>

            <!--表头-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:paddingLeft="@dimen/stats_result_margin_horizontal"
                android:paddingRight="@dimen/stats_result_margin_horizontal"
                android:background="@color/agmobile_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentLeft="true"
                    android:textSize="@dimen/text_size_second"
                    android:textColor="@color/agmobile_black"
                    android:text="分组字段"/>

                <TextView
                    android:id="@+id/stats_units"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/text_size_second"
                    android:textColor="@color/agmobile_black"
                    android:text="结果"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/list_divider"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_stats_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/agmobile_white"
                android:visibility="visible">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@mipmap/stats_shadow" />
    </LinearLayout>
