            <View
                style="@style/AGMobile.Widget.View.DividerHorizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="查询空间范围"
                    android:textColor="@color/agmobile_blue"
                    android:textSize="15sp"/>
            </LinearLayout>

            <View
                style="@style/AGMobile.Widget.View.DividerHorizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/agmobile_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_global"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="全图"/>

                    <CheckBox
                        android:id="@+id/cb_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="当前范围"/>

                    <CheckBox
                        android:id="@+id/cb_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="行政区域"/>
                </LinearLayout>

                <View
                    style="@style/AGMobile.Widget.View.DividerHorizontal"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_rectangle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="矩形"/>

                    <CheckBox
                        android:id="@+id/cb_polygon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="多边形"/>
                </LinearLayout>

                <View
                    style="@style/AGMobile.Widget.View.DividerHorizontal"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_level1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="区县级别:"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_city"
                            android:text="全市"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="10dp"/>

                        <CheckBox
                            android:id="@+id/cb_county"
                            android:text="区县"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="10dp"/>

                        <CheckBox
                            android:id="@+id/cb_street"
                            android:text="街镇"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/cb_vallage"
                            android:text="村居"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginRight="10dp"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <View
                style="@style/AGMobile.Widget.View.DividerHorizontal"/>

            <LinearLayout
                android:id="@+id/ll_level2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="区县:"
                    android:textSize="15sp"/>

                <com.augurit.am.cmpt.widget.spinner.AMSpinner
                    android:id="@+id/sp_county"
                    style="@style/PlanSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp">
                </com.augurit.am.cmpt.widget.spinner.AMSpinner>
            </LinearLayout>

            <View
                style="@style/AGMobile.Widget.View.DividerHorizontal"/>

            <LinearLayout
                android:id="@+id/ll_level3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="街镇:"
                    android:textSize="15sp"/>

                <com.augurit.am.cmpt.widget.spinner.AMSpinner
                    android:id="@+id/sp_street"
                    style="@style/PlanSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp">
                </com.augurit.am.cmpt.widget.spinner.AMSpinner>
            </LinearLayout>

            <View
                style="@style/AGMobile.Widget.View.DividerHorizontal"/>

            <LinearLayout
                android:id="@+id/ll_vallage_sp"
                android:visibility="gone"
                android:background="@android:color/background_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="村居:"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"/>

                <com.augurit.am.cmpt.widget.spinner.AMSpinner
                    android:id="@+id/sp_village"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="8dp"
                    style="@style/PlanSpinner">
                </com.augurit.am.cmpt.widget.spinner.AMSpinner>
            </LinearLayout>

            <View
                style="@style/AGMobile.Widget.View.DividerHorizontal"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp">

                    <Button
                        android:id="@+id/btn_query"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/program_btn_shape"
                        android:text="查询"
                        android:textColor="@color/agmobile_white"/>

                    <Button
                        android:id="@+id/btn_clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/program_btn_shape"
                        android:text="清除"
                        android:textColor="@color/agmobile_white"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>