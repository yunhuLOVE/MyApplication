<?xml version="1.0" encoding="utf-8"?>
<com.augurit.agmobile.agmultiplan.common.DefaultMapContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:mapView="@+id/map_view">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--内容-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--MapView-->
            <com.esri.android.map.MapView
                android:id="@+id/map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:id="@+id/rl_head"
                android:layout_width="400dp"
                android:layout_height="270dp">

                <android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/drawer_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true">

                    <FrameLayout
                        android:id="@+id/fragment_container"
                        android:layout_width="400dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="40dp"></FrameLayout>

                    <!--
                    <android.support.design.widget.NavigationView
                        android:id="@+id/nav_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:background="@android:color/transparent"
                        android:fitsSystemWindows="false"
                        app:menu="@menu/menu_app"/>
                        -->
                </android.support.v4.widget.DrawerLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_middle"
                android:layout_width="370dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="82dp">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cv_menu_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="@string/alpha"
                    android:layout_marginTop="20dp"
                    android:clickable="true"
                    card_view:cardUseCompatPadding="true">
                    <include
                        android:id="@+id/rv_menu"
                        layout="@layout/action_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/blue"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/btn_1"
                            style="@style/MenuButton">

                            <ImageView
                                style="@style/MenuButtonIcon"
                                android:src="@drawable/menu_ic_userinfo" />

                            <TextView
                                style="@style/MenuButtonText"
                                android:text="个人资料" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_2"
                            style="@style/MenuButton">

                            <ImageView
                                style="@style/MenuButtonIcon"
                                android:src="@drawable/menu_ic_mywork" />

                            <TextView
                                style="@style/MenuButtonText"
                                android:text="我的工作" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_3"
                            style="@style/MenuButton">

                            <ImageView
                                style="@style/MenuButtonIcon"
                                android:src="@drawable/menu_ic_program" />

                            <TextView
                                style="@style/MenuButtonText"
                                android:text="项目查询" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_4"
                            style="@style/MenuButton">

                            <ImageView
                                style="@style/MenuButtonIcon"
                                android:src="@drawable/menu_ic_project" />

                            <TextView
                                style="@style/MenuButtonText"
                                android:text="专题管理" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_5"
                            style="@style/MenuButton">

                            <ImageView
                                style="@style/MenuButtonIcon"
                                android:src="@drawable/menu_ic_layer" />

                            <TextView
                                style="@style/MenuButtonText"
                                android:text="图层管理" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_6"
                            style="@style/MenuButton"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <ImageView
                                style="@style/MenuButtonIcon"
                                android:src="@drawable/menu_ic_more" />
                        </LinearLayout>
                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <!--更多菜单Popup锚点-->
            <View
                android:id="@+id/view_popup_anchor"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignTop="@id/rl_middle"
                android:layout_toRightOf="@id/rl_middle" />

            <RelativeLayout
                android:id="@+id/rl_tail"
                android:layout_width="370dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="172dp">

                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/action_container_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="@string/alpha"
                    android:clickable="true"
                    android:visibility="visible"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:id="@+id/ll_change_menu"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:alpha="@string/alpha"
                            android:background="@color/blue"
                            android:visibility="gone">
                            <TextView
                                android:text="功能名称"
                                android:textSize="18sp"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:layout_centerInParent="true"
                                android:id="@+id/menu_action_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageButton
                                android:layout_alignParentEnd="true"
                                android:id="@+id/btn_change_menu"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:background="@mipmap/down_arrow" />
                        </RelativeLayout>

                        <FrameLayout
                            android:id="@+id/action_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></FrameLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

            <!--
            <LinearLayout
                android:id="@+id/ll_change_menu"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="86dp"
                android:layout_toRightOf="@id/rl_middle"
                android:alpha="@string/alpha"
                android:background="@android:color/holo_orange_light"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/btn_change_menu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/down_arrow" />
            </LinearLayout>
            -->

            <LinearLayout
                android:id="@+id/ll_above_toolbox_container"
                android:layout_width="350dp"
                android:layout_height="65dp"
                android:layout_marginTop="32dp"
                android:layout_toRightOf="@id/rl_head"
                android:orientation="vertical" />

            <!--    <LinearLayout
                    android:id="@+id/ll_toolbox_container"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="85dp"
                    android:layout_toRightOf="@id/rl_head"
                    android:orientation="vertical"/>-->

            <LinearLayout
                android:id="@+id/top_bar_container"
                android:layout_width="230dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@+id/ll_right_tool_container"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/map_btn_margin_horizontal"
                android:layout_marginTop="100dp"
                android:orientation="vertical" />
        </RelativeLayout>


        <!-- 平板用于摆放点查候选列表和更多属性-->
        <FrameLayout
            android:id="@+id/identify_info_container"
            android:layout_width="@dimen/menu_candidate_container_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:alpha="@string/alpha"
            android:elevation="10dp"
            android:visibility="gone"><!--clickable="true"是为了防止点击击穿地图 -->
            <!-- <include layout="@layout/cadidate_container"/>-->
        </FrameLayout>

        <!--地图右侧容器-->
        <include
            android:id="@+id/action_right"
            layout="@layout/action_right"
            android:layout_width="@dimen/map_btn_size"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/map_btn_margin_horizontal"
            android:layout_marginTop="@dimen/top_bar_height" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <!--查看图例按钮-->
            <LinearLayout
                android:id="@+id/ll_showlegend_btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/map_btn_spacing_vertical"
                android:layout_marginRight="@dimen/map_btn_margin_horizontal"
                android:alpha="@string/alpha"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_showlegend"
                    style="@style/MapButton"
                    android:scaleType="fitCenter">

                    <ImageView
                        style="@style/MapButtonIcon"
                        android:src="@mipmap/ic_legend" />

                    <TextView
                        style="@style/MapButtonText"
                        android:text="图例"
                        android:textSize="8sp"/>
                </LinearLayout>
            </LinearLayout>

            <!--添加书签按钮-->
            <LinearLayout
                android:id="@+id/ll_addbookmark_btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/map_btn_spacing_vertical"
                android:layout_marginRight="@dimen/map_btn_margin_horizontal"
                android:alpha="@string/alpha"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_bookmark"
                    style="@style/MapButton"
                    android:scaleType="fitCenter">

                    <ImageView
                        style="@style/MapButtonIcon"
                        android:src="@drawable/map_ic_bookmark" />

                    <TextView
                        style="@style/MapButtonText"
                        android:text="添加书签"
                        android:textSize="8sp"/>
                </LinearLayout>
            </LinearLayout>
            <!--测量按钮-->
            <LinearLayout
                android:id="@+id/ll_measure_btn_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/ll_addbookmark_btn_container"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/map_btn_margin_horizontal"
                android:alpha="@string/alpha"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_measure"
                    style="@style/MapButton"
                    android:scaleType="fitCenter">

                    <ImageView
                        style="@style/MapButtonIcon"
                        android:src="@drawable/map_ic_measure" />

                    <TextView
                        style="@style/MapButtonText"
                        android:text="测量"
                        android:textSize="8sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!--全图、定位按钮-->
        <LinearLayout
            android:id="@+id/ll_right_btn_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/map_btn_margin_bottom"
            android:layout_marginRight="@dimen/map_btn_margin_horizontal"
            android:alpha="@string/alpha"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/btn_global"
                style="@style/MapButton"
                android:layout_marginBottom="@dimen/map_btn_spacing_vertical"
                android:scaleType="fitCenter">

                <ImageView
                    style="@style/MapButtonIcon"
                    android:src="@drawable/map_ic_global" />

                <TextView
                    style="@style/MapButtonText"
                    android:textSize="8sp"
                    android:text="全图" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_location"
                style="@style/MapButton"
                android:scaleType="fitCenter">

                <ImageView
                    style="@style/MapButtonIcon"
                    android:src="@drawable/map_ic_location" />

                <TextView
                    style="@style/MapButtonText"
                    android:textSize="8sp"
                    android:text="位置" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btn_compass"
                style="@style/MapButton"
                android:scaleType="fitCenter"
                android:visibility="gone">

                <ImageView
                    style="@style/MapButtonIcon"
                    android:src="@drawable/map_ic_locate_press" />

                <TextView
                    style="@style/MapButtonText"
                    android:text="位置" />
            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_zoomcenter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/map_btn_size"
                android:checked="false"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- <LinearLayout
             android:id="@+id/ll_tool_container"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/rl_head"
             android:orientation="vertical"/>-->

    </RelativeLayout>

</com.augurit.agmobile.agmultiplan.common.DefaultMapContainer>