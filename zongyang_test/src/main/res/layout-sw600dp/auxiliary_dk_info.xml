<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:layout_alignParentTop="true"
        android:background="@color/agmobile_white"
        android:visibility="gone">

        <LinearLayout
            style="@style/AGMobile.Widget.Button.Container.Light"
            android:layout_width="@dimen/top_bar_height"
            android:layout_height="@dimen/top_bar_height"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                style="@style/AGMobile.Widget.ImageButton.TopBar"
                android:src="@mipmap/common_ic_close_black" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="地块相关情况"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_second" />

        <View
            style="@style/AGMobile.Widget.View.DividerVertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/ll_btns" />

        <View
            style="@style/AGMobile.Widget.View.DividerHorizontal"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <include layout="@layout/common_right_container_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:text="地块审批信息"
                android:textColor="@color/agmobile_blue"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View style="@style/AGMobile.Widget.View.DividerHorizontal" />

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_dk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="scrollable">

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审批信息统计" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建设用地复文" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建设用地选址意见书" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建设用地批准书" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建设项目规划许可证" />

                <android.support.design.widget.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建设用地预审" />
            </android.support.design.widget.TabLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <include
                    android:id="@+id/item_approve"
                    layout="@layout/auxiliary_dk_approve_info" />

                <include
                    android:id="@+id/item_build"
                    layout="@layout/auxiliary_build_info"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="控制线检测结果"
                android:textColor="@color/agmobile_blue"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View style="@style/AGMobile.Widget.View.DividerHorizontal" />

            <android.support.design.widget.TabLayout
                android:id="@+id/control_line_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabMode="fixed"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/control_line_result_viewPager"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#ffffff"
                />
